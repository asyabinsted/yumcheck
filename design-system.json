  "typography": {
    "fontFamily": {
      "primary": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif"
    },
    "fontSizes": {
      "xs": "12px",
      "sm": "14px", 
      "base": "16px",
      "lg": "18px",
      "xl": "20px",
      "2xl": "24px",
      "3xl": "32px"
    },
    "fontWeights": {
      "regular": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    },
    "hierarchy": {
      "title": {
        "fontSize": "3xl",
        "fontWeight": "bold",
      "color": "surfaceForeground"
      },
      "heading": {
        "fontSize": "xl",
        "fontWeight": "semibold",
      "color": "surfaceForeground"
      },
      "subheading": {
        "fontSize": "lg",
        "fontWeight": "medium",
      "color": "surfaceMutedForeground"
      },
      "body": {
        "fontSize": "base",
        "fontWeight": "regular",
      "color": "surfaceMutedForeground"
      },
      "caption": {
        "fontSize": "sm",
        "fontWeight": "regular",
      "color": "surfaceMutedForeground"
      },
      "label": {
        "fontSize": "xs",
        "fontWeight": "medium",
      "color": "surfaceMutedForeground"
      }
    }
  },

  "spacing": {
    "scale": "4px",
    "values": {
      "0": "0px",
      "1": "4px",
      "2": "8px", 
      "3": "12px",
      "4": "16px",
      "5": "20px",
      "6": "24px",
      "8": "32px",
      "10": "40px",
      "12": "48px",
      "16": "64px"
    }
  },

  "borderRadius": {
    "none": "0px",
    "sm": "4px",
    "base": "8px",
    "lg": "12px",
    "xl": "16px",
    "2xl": "24px",
    "full": "50%"
  },

  "shadows": {
    "none": "none",
    "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
    "base": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)",
    "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
    "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
    "card": "0 2px 8px rgba(0, 0, 0, 0.08)"
  },

  "layout": {
    "container": {
      "maxWidth": "100%",
      "padding": "16px",
      "margin": "0 auto"
    },
    "grid": {
      "columns": 12,
      "gap": "16px"
    }
  },

  "components": {
    "card": {
      "background": "var(--surface-card)",
      "borderRadius": "xl",
      "padding": "16px",
      "shadow": "card",
      "border": "1px solid hsl(var(--color-border) / 0.45)",
      "variants": {
        "default": {
          "background": "var(--surface-card)"
        },
        "subtle": {
          "background": "var(--surface-muted)",
          "border": "1px solid hsl(var(--color-border) / 0.35)"
        }
      }
    },
    
    "button": {
      "borderRadius": "lg",
      "padding": "12px 24px",
      "fontWeight": "semibold",
      "fontSize": "base",
      "variants": {
        "primary": {
          "background": "var(--surface-primary)",
          "color": "var(--surface-primary-foreground)"
        },
        "secondary": {
          "background": "var(--surface-secondary)",
          "color": "var(--surface-secondary-foreground)"
        },
        "ghost": {
          "background": "transparent",
          "color": "var(--surface-primary)",
          "border": "1px solid var(--surface-primary)"
        }
      },
      "states": {
        "hover": {
          "opacity": 0.8
        },
        "active": {
          "transform": "scale(0.98)"
        }
      }
    },

    "listItem": {
      "padding": "12px 16px",
      "borderRadius": "lg",
      "background": "var(--surface-card)",
      "shadow": "sm",
      "marginBottom": "8px",
      "structure": {
        "layout": "flex",
        "alignItems": "center",
        "gap": "12px"
      },
      "elements": {
        "icon": {
          "width": "40px",
          "height": "40px",
          "borderRadius": "base",
          "background": "var(--surface-muted)"
        },
        "content": {
          "flex": 1
        },
        "badge": {
          "padding": "4px 8px",
          "borderRadius": "full",
          "fontSize": "xs",
          "fontWeight": "medium",
          "background": "var(--surface-muted)",
          "color": "var(--surface-muted-foreground)"
        }
      }
    },

    "statusIndicator": {
      "width": "8px",
      "height": "8px", 
      "borderRadius": "full",
      "variants": {
        "success": "var(--surface-success)",
        "warning": "var(--surface-destructive-foreground)",
        "error": "var(--surface-destructive)",
        "neutral": "var(--surface-muted-foreground)"
      }
    },

    "navigationBar": {
      "height": "44px",
      "padding": "0 16px",
      "background": "var(--surface-background)",
      "borderBottom": "1px solid hsl(var(--color-border) / 0.6)",
      "structure": {
        "layout": "flex",
        "alignItems": "center",
        "justifyContent": "space-between"
      }
    },

    "tabBar": {
      "height": "60px",
      "background": "var(--surface-background)",
      "borderTop": "1px solid hsl(var(--color-border) / 0.6)",
      "structure": {
        "layout": "flex",
        "alignItems": "center",
        "justifyContent": "space-around"
      }
    },

    "noteInterface": {
      "background": "variable",
      "borderRadius": "xl",
      "padding": "20px",
      "minHeight": "200px",
      "colorOptions": {
        "lime": "var(--chart-color-1)",
        "coral": "var(--chart-color-2)", 
        "pink": "var(--chart-color-3)",
        "sky": "var(--chart-color-4)",
        "blue": "var(--chart-color-5)"
      },
      "controls": {
        "colorPicker": {
          "layout": "flex",
          "gap": "8px",
          "swatchSize": "24px",
          "swatchBorderRadius": "full"
        }
      }
    }
  },

  "patterns": {
    "itemGrid": {
      "structure": "grid",
      "columns": 2,
      "gap": "12px",
      "itemAspectRatio": "1:1.2"
    },
    
    "listView": {
      "structure": "vertical stack",
      "gap": "8px",
      "padding": "16px"
    },

    "cardCollection": {
      "structure": "vertical stack", 
      "gap": "16px",
      "padding": "16px"
    },

    "detailView": {
      "structure": "sections",
      "sectionGap": "24px",
      "contentPadding": "16px"
    }
  },

  "animations": {
    "transitions": {
      "fast": "150ms ease-out",
      "normal": "250ms ease-out", 
      "slow": "350ms ease-out"
    },
    "effects": {
      "fadeIn": {
        "opacity": "0 to 1",
        "duration": "normal"
      },
      "slideIn": {
        "transform": "translateY(20px) to translateY(0)",
        "duration": "normal"
      },
      "scaleIn": {
        "transform": "scale(0.95) to scale(1)",
        "duration": "fast"
      }
    }
  },

  "designPrinciples": {
    "visualHierarchy": {
      "useWhitespace": "Generous spacing between elements",
      "typography": "Clear size and weight distinctions",
      "color": "Subtle use of color for categorization and status"
    },
    "consistency": {
      "cardPattern": "Consistent rounded corners and shadows",
      "spacing": "Uniform padding and margins throughout",
      "iconography": "Consistent icon style and sizing"
    },
    "usability": {
      "touchTargets": "Minimum 44px for interactive elements",
      "feedback": "Clear visual feedback for interactions",
      "readability": "High contrast text on backgrounds"
    },
    "aesthetics": {
      "cleanDesign": "Minimal, uncluttered interfaces",
      "softColors": "Muted, pleasant color palette",
      "modernLayout": "Card-based, grid-oriented layouts"
    }
  },

  "usage": {
    "cardLayouts": "Use cards for distinct content groupings with consistent padding and shadows",
    "colorCoding": "Apply semantic tokens (primary, secondary, success, destructive) to differentiate actions and statuses",
    "listStructure": "Maintain consistent spacing and alignment in list items",
    "statusIndicators": "Use small colored dots or badges for status representation",
    "navigationPattern": "Clean header with token-driven background and border treatments",
    "contentHierarchy": "Lead with visual elements (images/icons), follow with text hierarchy"
  }
}]
